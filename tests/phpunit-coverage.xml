<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
    bootstrap="bootstrap.php"
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    verbose="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false">
    
    <testsuites>
        <testsuite name="SPSS, PSPP php implementation (read/write)">
            <directory>src/</directory>
        </testsuite>
   
    </testsuites>
    
    <logging>
        <log type="junit" target="tmp/phpunit.log.xml" logIncompleteSkipped="false"/>
        <log type="coverage-html" target="../docs/CodeCoverage/" lowUpperBound="35" highLowerBound="70"/>
    </logging>
    
    <filter>
        <whitelist>
            <directory >../src/</directory>
        </whitelist>
    </filter>
    
    
</phpunit>